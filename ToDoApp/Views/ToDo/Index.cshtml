@model ToDoViewModel
@using Humanizer;

@{
    ViewData["Title"] = "Manage Your ToDo List";
}

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>Item</td>
                <td>Start</td>
            </tr>
        </thead>

        @foreach (var item in Model.ToDoItems)
        {
            <tr>
                <td>
                    <input type="checkbox" name="@item.Id" value="true" class="done-checkbox">
                </td>
                <td>@item.Title</td>
                <td>@item.StartedAt.Humanize()</td>
            </tr>
        }
    </table>

    <div class="panel-footer add-item-form">
        <form>
            <div id="add-item-error" class="text-danger"></div>
            <label for="add-item-title">Add New ToDo Item</label>
            <input id="add-item-title">
            <button type="button" class="btn-primary btn-sm" id="add-item-button">Add</button>
        </form>
    </div>
</div>